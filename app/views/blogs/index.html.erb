<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
    <p><%= notice %></p>
    <h1>ブログ一覧</h1>
    <%= link_to "ブログを作成する", new_blog_path, class: 'btn-default' %>
    <% @blogs.each do |blog| %>
    <div class="b-row">
      <div class="row">
        <% if blog.user != nil %>
          <div class="user_image" >
            <%= profile_img(blog.user) if profile_img(blog.user) %>
          </div>
          <div>
            <%= blog.user.name %>さんが投稿しました。
          </div>
        <% end %>
      </div>
      <div class="row">
        <%= link_to blog_path(blog) do %>
          <h4><strong><%= blog.title %></strong></h4>
        <% end %>
        <p><%= blog.content %></p>
        <% if blog.user.id == current_user.id %>
          <%= link_to "ブログを編集する", edit_blog_path(blog.id), class: 'btn btn-default btn-sm btn-success' %>
          <%= link_to "ブログを削除する", blog_path(blog), method: :delete, data: { confirm: '本当に削除していいですか？' }, class: 'btn btn-default btn-sm btn btn-danger' %>
        <% end %>
      </div>
    </div>
    <% end %>
  </div>
  <div id="blog-top-btn" class="blog-top-btn">
    <p><a class="move-blog-top" id="move-blog-top">▲</a></p>
  </div>
</div>
