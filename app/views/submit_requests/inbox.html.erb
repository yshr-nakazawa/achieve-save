<p id="notice"><%= notice %></p>

<h1>Listing Submit Requests</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Task</th>
      <th>Message</th>
      <th>Request user</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @submit_requests.each do |submit_request| %>
      <tr>
        <td><%= submit_request.user.name %></td>
        <td><%= submit_request.task.title %></td>
        <td><%= submit_request.message %></td>
        <td><%= User.find(submit_request.request_user_id).name %></td>
        <td><%= submit_request.status %></td>
        <td><%= link_to 'Show', submit_request %></td>
        <td><%= link_to '承認する', approve_submit_request_path(submit_request, submit_request: {status: 2}), method: :patch, data: { confirm: '承認しますか？'} %></td>
        <td><%= link_to '却下する', reject_submit_request_path(submit_request, submit_request: {status: 9}), method: :patch, data: { confirm: '却下しますか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

